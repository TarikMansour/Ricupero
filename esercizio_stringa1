
#include <stdio.h>
#include <string.h>
#include <ctype.h>
void lunghezza_str (char a[], char b[]){
    if (strlen(a) > strlen(b)){
        printf("la prima stringa risulta piu lunga\n");
    }
    else if (strlen(a) == strlen(b)){
        printf("hanno la stessa lunghezza\n");  
    }
    else {
        printf("la seconda stringa risulta piu lunga\n");
    }
}
void conta_vocali (char a[], char b[], int *conta, int *conta2){
    for (int i = 0; a[i] != 0; i++){
        if (a[i] == 'a' || a[i] == 'e' || a[i] == 'i' || a[i] == 'o' || a[i] == 'u'){
            (*conta)++;
        }
    }
    for (int i = 0;  b[i] != 0; i++){
        if (b[i] == 'a' || b[i] == 'e' || b[i] == 'i' || b[i] == 'o' || b[i] == 'u'){
            (*conta2)++;
        }
    }
}
void elimina_carattere (char a[], char b[]){
    char carattere;
    printf("inserire un carattere per eliminare\n");
    scanf("%s", &carattere);
    for (int i = 0; a[i] != 0; i++){
        if (a[i] == carattere){
            a[i] = a[i+1];
            i--;
        }
    }
    for (int i = 0; b[i] != 0; i++){
        if (b[i] == carattere){
            b[i] = b[i+1];
            i--;
        }
    }
}   
int main(int argc,char* argv[])
{
    char stringa1[20];
    char stringa2[20];
    int conta = 0, conta2 = 0;
    printf("inserire due stringhe\n");
    scanf("%s%s", stringa1, stringa2);
    void (*puntalen)(char[], char[]);
    void (*puntavoc)(char[], char[], int*, int*);
    void (*puntachar)(char[], char[]);
    puntalen = &lunghezza_str;
    puntavoc = &conta_vocali;
    puntachar = &elimina_carattere;
    int len1 = strlen(stringa1);
    int len2 = strlen(stringa2);

    for (int i = 0; i<len1; i++){
        stringa1[i] = tolower(stringa1[i]);
        while (stringa1[i] < 97 || stringa1[i] > 122){
            printf("rinserire la prima stringa \n");
            scanf("%s", stringa1);
        }
    }
     for (int i = 0; i<len2; i++){
        stringa2[i] = tolower(stringa2[i]);
        while (stringa2[i] < 97 || stringa2[i] > 122){
            printf("rinserire la seconda stringa \n");
            scanf("%s", stringa2);
        }
    }
    
    puntachar(stringa1, stringa2);
    printf("le nuove stringhe sono %s e %s \n", stringa1, stringa2);
    puntalen(stringa1, stringa2);
    puntavoc(stringa1, stringa2, &conta, &conta2);
    if(conta >conta2){
        printf("la prima stringa contiene piu vocali\n");
    }
    if(conta == conta2){
        printf("hanno la stessa quantita di vocali\n");
    }
    else {
        printf("la seconda stringa ha piu vocali\n");
    }
    return 0;
}
