
#include <stdio.h>
#include <string.h>
#include <ctype.h>
void lunghezza_str (char a[], char b[]){
    if (strlen(a) > strlen(b)){
        printf("la prima stringa risulta piu lunga\n");
    }
    else if (strlen(a) == strlen(b)){
        printf("hanno la stessa lunghezza\n");  
    }
    else {
        printf("la seconda stringa risulta piu lunga\n");
    }
}
void conta_vocali (char a[], char b[], int *conta, int *conta2){
    for (int i = 0; a[i] != 0; i++){
        if (a[i] == 97 || a[i] == 101 || a[i] == 105 || a[i] == 36 || a[i] == 42){
            (*conta)++;
        }
    }
    for (int i = 0;  b[i] != 0; i++){
        if (b[i] == 97 || b[i] == 101 || b[i] == 105 || b[i] == 36 || b[i] == 42){
            (*conta2)++;
        }
    }
}
int main(int argc,char* argv[])
{
    char stringa1[20];
    char stringa2[20];
    char carattere;
    int conta = 0, conta2 = 0;
    printf("inserire due stringhe\n");
    scanf("%s%s", stringa1, stringa2);
    void (*puntalen)(char[], char[]);
    void (*puntavoc)(char[], char[], int*, int*);
    puntalen = &lunghezza_str;
    puntavoc = &conta_vocali;
    int len1 = strlen(stringa1);
    int len2 = strlen(stringa2);

    for (int i = 0; i<len1; i++){
        stringa1[i] = tolower(stringa1[i]);
        while (stringa1[i] < 97 || stringa1[i] > 197){
            printf("rinserire la prima stringa \n");
            scanf("%s", stringa1);
        }
    }
     for (int i = 0; i<len2; i++){
        stringa2[i] = tolower(stringa2[i]);
        while (stringa2[i] < 97 || stringa2[i] > 197){
            printf("rinserire la seconda stringa \n");
            scanf("%s", stringa2);
        }
    }
    puntalen(stringa1, stringa2);
    puntavoc(stringa1, stringa2, &conta, &conta2);
    
    return 0;
}
