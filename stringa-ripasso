void ContaDoppie(char a[]){
    for(int i = 0; i<strlen(a); i++){
        if(a[i] == a[i+1]){
            printf("ci sono doppie\n");
        }
    }
}
void MisuraStringhe(char a[], char b[], int *conta, int *conta2){
    int len = strlen(char a[]);
    int len2 = strlen(char b[]);
    if(len > len2){
        printf("la stringa %s è piu lunga", a);
    }
    else if (len2 > len){
         printf("la stringa %s è piu lunga", b);
    }
    else{
        printf("le stringhe hanno la stessa lunghezza");
    }
}
void conta_vocali (char a[], char b[], int *conta, int *conta2){
    for (int i = 0; a[i] != 0; i++){
        if (a[i] == 'a' || a[i] == 'e' || a[i] == 'i' || a[i] == 'o' || a[i] == 'u'){
            (*conta)++;
        }
    }
    for (int i = 0;  b[i] != 0; i++){
        if (b[i] == 'a' || b[i] == 'e' || b[i] == 'i' || b[i] == 'o' || b[i] == 'u'){
            (*conta2)++;
        }
    }
}
