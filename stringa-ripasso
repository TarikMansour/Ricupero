void VerificaLettere(char a[], char b[], int *conta, int *conta2){
    for(int i = 0; i<strlen(a); i++){
        a[i] = tolower(a[i]);
        if (a[i] < 97 || a[i] > 122){
            printf("stringa invalida\n");
        }
    }
}
